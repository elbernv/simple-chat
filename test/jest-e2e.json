{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@core/(.*)$": "<rootDir>/../src/core/$1",
    "^@auth/(.*)$": "<rootDir>/../src/modules/auth/$1",
    "^@user/(.*)$": "<rootDir>/../src/modules/user/$1",
    "^@customer/(.*)$": "<rootDir>/../src/modules/customer/$1"
  }
}
